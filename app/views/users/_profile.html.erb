<div class="p-5 col-span-1 bg-white shadow mb-5">
  <div class="flex items-center gap-3">
    <img src="<%= @user.photo != '' ? @user.photo : 'https://xsgames.co/randomusers/avatar.php?g=pixel' %>" class="h-16 h-16 rounded-full"/>
    <div>
      <div class="lg:text-xl font-bold text-gray-700 block"><%= @user.name %></div>
      <span class="text-xs font-gray-500"><%= @user.posts_count %> Posts</span>
    </div>
  </div>
  <div class="text-sm mt-5 text-gray-700">
    <%= @user.bio %>
  </div>
</div>
