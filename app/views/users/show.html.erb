<div class="shadow bg-white mb-6"></div><div  <%= @user.name %>  <%= @user.bio %>  <%= @user.posts_count %> posts<div class="grid grid-cols-1 lg:grid-cols-4 lg:gap-3">  <div class="p-5 col-span-1 bg-white shadow mb-5">    <div class="flex items-center gap-3">      <img src="https://xsgames.co/randomusers/avatar.php?g=male" class="h-16 h-16 rounded-full"/>      <div>        <div class="lg:text-xl font-bold text-gray-700 block"><%= @user.name %></div>        <span class="text-xs font-gray-500"><%= @user.posts_count %> Posts</span>      </div>    </div>    <div class="text-sm mt-5 text-gray-700">      <%= @user.bio %>    </div>  </div>  <div class="col-span-3">    <% @user.posts.each do |post| %>      <div class="p-5 col-span-4 bg-white mb-5">        <h5 class="text-gray-700 font-bold"><%= post.title %></h5>        <p class="text-sm py-2"><%= post.text %></p>        <div class="flex justify-end gap-10 text-xs">          <div>            <span class="font-bold text-gray-700"><%= post.likes_count ? post.likes_count : 0 %></span> Likes          </div>          <div>            <span class="font-bold text-gray-700"><%= post.comments_count ? post.comments_count : 0 %></span> Comments          </div>        </div>      </div>    <% end %>  </div></div>